---
import { Image } from '@astrojs/image/components';
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';
import coverImage from '~/assets/images/cover.jpeg';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <div>
    <div class="relative w-full h-full">
      <Image src={coverImage} alt="Cover Image" class="z-0" />
      <!-- overlay for img -->
      <div class="absolute inset-0 bg-gradient-to-b from-black to-sky-600 opacity-50 z-10"></div>
      <div class="absolute inset-0 z-20 flex items-center justify-center md:items-start md:mt-52">
        <div class="text-center">
          <h1 class="text-4xl font-bold text-white">hi.</h1>
        </div>
      </div>
    </div>
  </div>
</Layout>
